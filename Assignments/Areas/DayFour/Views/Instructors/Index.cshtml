@model IEnumerable<Assignments.Areas.DayTwo.Models.Instructor>
@{
    ViewData["Title"] = "Instructors";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Depratment</th>
            <th></th>
            <th>
                <a class="btn btn-outline-success" href="~/DayFour/Instructors/New">Add New</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var instructor in Model)
        {
            <tr>
                <th scope="row">@instructor.Id</th>
                <td>@instructor.Name</td>
                <td>@instructor.Department.Name</td>
                <td>
                    <a class="btn btn-outline-primary" href="~/DayFour/Instructors/Details/@instructor.Id">View More</a>
                    <a class="btn btn-outline-secondary" href="~/DayFour/Instructors/Edit/@instructor.Id">Edit</a>
                    <a class="btn btn-outline-danger" href="~/DayFour/Instructors/Delete/@instructor.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

